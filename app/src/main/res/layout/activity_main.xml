<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/vTextTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/main_title"
            android:textSize="18sp"
            android:padding="12sp"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:background="#5499C7"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textStyle="bold"/>

    <TextView
            android:id="@+id/vTxtResponseTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/response"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@+id/vTxtResponseValue"
            android:layout_marginStart="30dp"/>

    <TextView
            android:id="@+id/vTxtResponseValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dummy"
            android:textSize="20sp"
            android:layout_marginTop="49dp"
            android:layout_marginStart="1dp"
            app:layout_constraintTop_toBottomOf="@+id/vTextTitle"
            app:layout_constraintStart_toEndOf="@+id/vTxtResponseTitle"/>

    <Button
            android:id="@+id/vBtnBind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bind_service"
            app:layout_constraintStart_toStartOf="@+id/vTxtResponseValue"
            android:layout_marginTop="32dp"
            android:layout_marginStart="9dp"
            app:layout_constraintTop_toBottomOf="@+id/vTxtResponseValue"/>

</androidx.constraintlayout.widget.ConstraintLayout>